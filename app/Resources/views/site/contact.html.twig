{% extends ":site:index.html.twig"%}

{% block title %}Contact{% endblock %}
{% block loader %}{% endblock %}
{% block section %}
    
<div class="pos-mobile">
    <div class="title-rubrique padd-sm mg-bottom-xl">
        <h2 class="txt-color-primary big-title no-mg">Contact</h2>
        {#<p class="txt-color-primary no-mg">Ecrivez-moi, je vous r√©pond au plus vite</p>#}
    </div>

    <div class="container-fluid" data-midnight="color-hamb">
        <div class="row">
            <div class="img-header-contact scrolling-post">
                <img src="{{asset('/images/cell-phone.jpg')}}" class="img-responsive">
                <div class="cloud-contact anim">
                    {#<img src="{{asset('images/nuage-contact.png')}}">#}
                    <i class="fa fa-cloud" aria-hidden="true"></i>
                </div>

                <div class="form-content col-sm-12 col-lg-5">

                    {% for flash_message in app.session.flashBag.get('succesmail') %}
                        <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            {{ flash_message }}
                        </div>
                    {% endfor %}

                    <div id="form-contact">
                        <form action="{{path('contact')}}" id="contact" method="POST" class="contact-form-mail">
                            <div class="form-group-mail">
                                <input id="nom" type="text" name="nom" class="form-control-mail" placeholder="Nom" required="required">
                                <span id="msg_nom"></span>
                            </div>

                            <div class="form-group-mail">
                                <input id="email" type="email" name="email" class="form-control-mail" placeholder="Email" required="required">
                                <span id="msg_email"></span>
                            </div>


                            <div class="form-group-mail">
                                <textarea name="message" id="message" class="form-control-mail"  placeholder="Message" required="required"></textarea>
                                <span id="msg_message"></span>
                            </div>

                            <div class="form-group-mail">
                                <div class="col-md-12 btn-envoyer-form"> 
                                    <div class="btn-lien-all">
                                        <input type="submit" class="btn btn-all" value="Envoyer"></input>
                                    </div>
                                </div>
                        </form>
                        <span id="msg_all"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
{% block javascript %}
{% endblock%}
{% endblock%}



